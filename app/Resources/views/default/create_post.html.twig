{% extends 'template/nav_header_base.html.twig' %}

{% block body %}
    <div class="demo-blog--blogpost">
        <div class="demo-blog__posts  mdl-grid">
            <div class="mdl-card mdl-shadow--4dp mdl-cell mdl-cell--12-col">
                <div class="mdl-card__media mdl-color-text--grey-50">
                    <h3>Create Post</h3>
                </div>
                <div class="mdl-color-text--grey-700 mdl-card__supporting-text">
                    {{ form_start(form, {method: 'POST', action: path('post_new'), attr: {'class': 'mdl-cell mdl-cell--11-col'}}) }}
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--2-offset mdl-cell--8-col">
                            {{ form_row(form.title, {'attr': {'class': 'mdl-textfield__input'}, 'label_attr':{'class':'mdl-textfield__label'}}) }}
                        </div>

                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--2-offset mdl-cell--8-col">
                            {{ form_row(form.summary, {'attr': {'class': 'mdl-textfield__input'}, 'label_attr':{'class':'mdl-textfield__label'}}) }}
                        </div>
                        <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-cell mdl-cell--2-offset mdl-cell--8-col">
                            {{ form_row(form.content, {'attr': {'class': 'mdl-textfield__input'}, 'label_attr':{'class':'mdl-textfield__label'}}) }}
                        </div>
                        <div class="mdl-cell mdl-cell--11-offset mdl-cell--1-col">
                            <button type="submit" class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon">
                                <i class="material-icons" role="presentation">check</i><span
                                        class="visuallyhidden">add post</span>
                            </button>
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

        </div>
    </div>
{% endblock %}